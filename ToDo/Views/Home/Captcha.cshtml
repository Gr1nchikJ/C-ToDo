<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
@{
    ViewData["Title"] = "Captcha";
}
<h1>Captcha</h1>

<form asp-action="CaptchaPost" id="form-action" method="post" class="form-horizontal" role="form">
    <input type="hidden" name="captchaToken" id="captchaToken" />
    <input type="submit" id="form-button" class="btn btn-success" value="START" />
</form>
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script><script src="https://www.google.com/recaptcha/api.js?render=reCAPTCHA_site_key"></script>
<script src="https://www.google.com/recaptcha/api.js?render=6Ld1Ur8hAAAAAOwS5U_S994_QC-Xcc4pRnFQGmPI"></script>
<script>
       grecaptcha.ready(function() {
           window.grecaptcha.execute('6Ld1Ur8hAAAAAOwS5U_S994_QC-Xcc4pRnFQGmPI', { action: 'submit' }).then(function (token) {
    document.getElementById('captchaToken').value = token;
           });
       });
</script>
